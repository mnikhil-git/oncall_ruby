<h1>Sign in</h1>

<%= form_for(@user_session, :url => {:action => "create"}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  
  <div class="field">
  	<%= f.check_box :remember_me %><br />
  	<%= f.label :remember_me%>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_session_path %></p>